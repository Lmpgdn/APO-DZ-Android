<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/apo_blue"
    android:orientation="vertical" >

    <!-- Header -->
    <TextView android:id="@+id/under_construction_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:gravity="center" 
        android:background="@android:color/black"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/apo_yellow"    
        android:text="@string/under_construction_header"
        style="@android:style/TextAppearance.Large"  />
    
    <ImageView
        android:id="@+id/imageView1"
        android:paddingTop="20dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/in_progress" />
	
    <TextView
        android:id="@+id/inProgressHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/apo_yellow"
        android:textAllCaps="true"
        android:text="@string/brother_status_wip_header" />
    
    <TextView
        android:id="@+id/inProgressMessage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textStyle="italic"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="@string/brother_status_wip_message" />
</LinearLayout>
