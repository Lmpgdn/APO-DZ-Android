<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/apo_blue" >

    
    <!-- Name -->
    <TextView 
       	android:paddingTop="@dimen/brother_detail_marginx2"
	    android:paddingBottom="@dimen/brother_detail_margin"
	    android:paddingLeft="@dimen/left_margin_dd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/name_dd"
        android:textColor="@color/apo_yellow"
        android:textSize="@dimen/text_size_dd" />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/brother_detail_margin"
	    android:paddingBottom="@dimen/brother_detail_margin"
	    android:paddingLeft="@dimen/left_margin_dd"
        android:text="naaammemee"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_dd" />
    
    
    <!-- Email -->
    <TextView 
       	android:paddingTop="@dimen/brother_detail_margin"
	    android:paddingBottom="@dimen/brother_detail_margin"
	    android:paddingLeft="@dimen/left_margin_dd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/apo_yellow"
        android:text= "@string/email_dd"
        android:textSize="@dimen/text_size_dd" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/left_margin_dd"
        android:paddingRight="@dimen/left_margin_dd"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="emmalll"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_dd" />
        <Button 
            android:id="@+id/email_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_button_dd"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button_text_size"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    
    
    <!-- Phone -->
    <TextView 
       	android:paddingTop="@dimen/brother_detail_margin"
	    android:paddingBottom="@dimen/brother_detail_margin"
	    android:paddingLeft="@dimen/left_margin_dd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/phone_dd"
        android:textColor="@color/apo_yellow"
        android:textSize="@dimen/text_size_dd" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/left_margin_dd"
        android:paddingRight="@dimen/left_margin_dd"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="phonn"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_dd" />
        <Button 
            android:id="@+id/call_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/call_button_dd"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button_text_size"
            android:layout_alignParentRight="true" />
        <Button 
            android:id="@+id/text_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_button_dd"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button_text_size"
            android:layout_toLeftOf="@id/call_button" /> 
    </RelativeLayout>
    
    
    <!-- Year, Pledge Class, Major -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:paddingLeft="@dimen/left_margin_dd"
        android:paddingRight="@dimen/left_margin_dd"
        android:paddingTop="@dimen/brother_detail_margin"
	    android:orientation="horizontal">
        
        <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:paddingLeft="@dimen/left_margin_dd"
	        android:paddingRight="@dimen/left_margin_dd"
		    android:layout_weight="1.5"
	        android:orientation="vertical" >
	    	<TextView
	    	    android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:paddingTop="@dimen/brother_detail_margin"
	    		android:paddingBottom="@dimen/brother_detail_margin"
	    		android:textColor="@color/apo_yellow"
	        	android:text="@string/year_dd"
	        	android:gravity="center" />
	    	<TextView
	    	    android:id="@+id/year"
	    	    android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:paddingTop="@dimen/brother_detail_margin"
	    		android:paddingBottom="@dimen/brother_detail_margin"
	    		android:textColor="@android:color/white"
	        	android:text="yarrr"
	        	android:gravity="center" />
	    </LinearLayout> 
	   	<LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:paddingLeft="@dimen/left_margin_dd"
	        android:paddingRight="@dimen/left_margin_dd"
		    android:layout_weight="2"
	        android:orientation="vertical" >
	    	<TextView 
	    	    android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:paddingTop="@dimen/brother_detail_margin"
	    		android:paddingBottom="@dimen/brother_detail_margin"
	    		android:textColor="@color/apo_yellow"
	        	android:text="@string/pledge_dd"
	        	android:gravity="center" />
	    	<TextView 
	    	    android:id="@+id/pledge_class"
	    	    android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:paddingTop="@dimen/brother_detail_margin"
	    		android:paddingBottom="@dimen/brother_detail_margin"
	    		android:textColor="@android:color/white"
	        	android:text="alphalhpap"
	        	android:gravity="center" />
	    </LinearLayout> 
        
    </LinearLayout>
    
    
   	<TextView 
   	    android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
       	android:paddingTop="@dimen/brother_detail_margin"
	    android:paddingBottom="@dimen/brother_detail_margin"
	    android:textColor="@color/apo_yellow"
       	android:text="@string/major_dd"
       	android:gravity="center" />
   	
   	<TextView 
   	    android:id="@+id/major"
   	    android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
       	android:paddingTop="@dimen/brother_detail_margin"
	    android:paddingBottom="@dimen/brother_detail_margin"
       	android:gravity="center"
       	android:textColor="@android:color/white"
       	android:text="majjorr" />

</LinearLayout>
